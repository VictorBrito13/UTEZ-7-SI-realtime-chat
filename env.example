# ==================== SERVER CONFIGURATION ====================
# Server host (0.0.0.0 for Render.com, localhost for local development)
SERVER_HOST=0.0.0.0

# Server port (Render.com will provide PORT automatically, use SERVER_PORT for local dev)
SERVER_PORT=12345

# ==================== JWT CONFIGURATION ====================
# Secret key for JWT token generation (CHANGE THIS IN PRODUCTION!)
API_JWT_SECRET=your-secret-jwt-key-change-this-in-production

# JWT expiration time in seconds (default: 3600 = 1 hour)
JWT_EXP=3600

# ==================== PDF SIGNATURE CONFIGURATION ====================
# Secret key for PDF signature tokens (CHANGE THIS IN PRODUCTION!)
SIGNING_SECRET=your-signing-secret-key-change-this-in-production

# Signature token expiration time in seconds (default: 1800 = 30 minutes)
SIGNATURE_TOKEN_EXPIRY=1800

# PDF file ID from Google Drive (optional - for downloading PDFs)
PDF_FILE_ID=

# Local PDF file path (alternative to Google Drive)
PDF_LOCAL_PATH=test_document.pdf

# Directory for storing signed PDFs
PDF_UPLOAD_DIR=./pdf_uploads

# ==================== RSA KEY CONFIGURATION ====================
# Paths for RSA keys (will be generated automatically if not present)
RSA_PRIVATE_KEY=rsa_private_key.pem
RSA_PUBLIC_KEY=rsa_public_key.pem

# ==================== USER DATABASE ====================
# Users are currently hardcoded in server_websocket.py
# For production, consider using environment variables or a database
# Format: JSON string with username:password pairs
# Example: {"alice":"pass123","bob":"pass456","admin":"admin123"}
USERS_DB={}

# ==================== SSL/TLS CONFIGURATION (Optional) ====================
# For local development with SSL/TLS
SERVER_CERT=cert.pem
SERVER_KEY=key.pem
CA_CERT=
CLIENT_VERIFY=false
CLIENT_CERT=client_cert.pem
CLIENT_KEY=client_key.pem

